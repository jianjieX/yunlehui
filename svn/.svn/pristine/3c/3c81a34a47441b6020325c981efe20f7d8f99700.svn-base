/*======自定义头部====== */

.header {
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 999;
}

.navigation-bar {
  display: flex;
  align-items: center;
  text-align: center;
}

.page-title {
  line-height: 40rpx;
  padding-left: 25rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  font-size: 34rpx;
}

/*======轮播图====== */

.swiper-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  position: relative;
}

.swiper-box {
  width: 100%;
  min-height: 360rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.swiper-box .wx-swiper-dot {
  width: 24rpx;
  display: inline-flex;
  height: 8rpx;
  margin-left: 10rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
}

.swiper-box .wx-swiper-dot-active::before {
  background: rgba(250, 190, 0, 1);
}

