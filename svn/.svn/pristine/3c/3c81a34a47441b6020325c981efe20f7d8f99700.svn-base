/*======分类====== */

.category-wrap {
  height: 200rpx;
  /* background-color: red; */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}

.category-item .category-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* background-color: rebeccapurple */
}

.category-item .category-column .img {
  width: 45rpx;
  height: 45rpx;
}

.category-item .category-column .title {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  margin-top: 10rpx;
}

