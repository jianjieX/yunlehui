page {
  background-color: #fff;
}

/* ======内容区======== */

.content-wrap .list {
  display: flex;
  flex-direction: column;
}

.content-wrap .list .item-wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 10rpx auto;
}

.content-wrap .list .item-wrap:nth-child(1) {
  margin-top: 0rpx;
}

.content-wrap .list .img-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.content-wrap .list .title {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #111;
  opacity: 0.5;
  padding: 16rpx 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.content-wrap .list .title text {
  opacity: 1;
  color: #fff;
}

.content-wrap .list .status {
  position: absolute;
  right: 0;
  top: 0;
  width: 128rpx;
  height: 50rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgb(51, 51, 51);
  background: rgba(250, 190, 0, 1);
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.3);
  border-radius: 0px 0px 0px 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content-wrap .list .img-wrap image {
  width: 100%;
}

.content-wrap .list .des-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.content-wrap .list .des-wrap text {
  padding: 24rpx 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(51, 51, 51, 1);
  font-weight: 400;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0px 24rpx;
}

.bottom .avatar {
  width: 48rpx;
  height: 48rpx;
  border: 1px solid #eee;
  border-radius: 50%;
}

.bottom .icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom .name {
  font-weight: 400;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(102, 102, 102, 1);
  margin-left: 10rpx;
}

.bottom .left {
  max-width: 350rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/**插画**/

.illustration-view {
  height: calc(100% - 400rpx);
  display: flex;
  text-align: center;
}

.illustration-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: 40% auto;
}

.illustration-style {
  width: 328rpx;
  height: 366rpx;
}

.illustration-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}
