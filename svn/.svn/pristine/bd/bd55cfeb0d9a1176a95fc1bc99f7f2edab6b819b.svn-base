page {
  background-color: rgba(240, 240, 240, 1);
}

.headImg {
  width: 100%;
  height: 360rpx;
}

.list-item {
  width: 94%;
  background-color: rgba(255, 255, 255, 1);
  margin: 16rpx 24rpx;
  align-items: center;
}

.list-item .list-item-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: start;
  box-shadow: 0px 4px 12px 0px rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  /* background-color: red; */
}

.list-item-row .list-inner {
  /* background-color: rebeccapurple; */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 32rpx 0rpx;
  width: 25%;
}

.list-item-row .list-inner .picture {
  width: 40rpx;
  height: 42rpx;
  margin: 0rpx 32rpx 16rpx 30rpx;
}

.list-item-row .list-inner .name {
  color: rgba(102, 102, 102, 1);
  font-size: 24rpx;
}
