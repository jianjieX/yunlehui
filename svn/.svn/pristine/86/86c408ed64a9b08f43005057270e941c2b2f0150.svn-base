page {
  width: 100%;
  background-color: #fff;
  margin-top: 200rpx;
}

.header {
  width: 750rpx;
  background: #fff;
  color: #222;
  font-size: 32rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 999;
}

.header .navigation {
  padding-top: 12rpx;
  padding-left: 30rpx;
  display: flex;
  font-size: 28rpx;
}

.header .logo {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
  border: 1px solid #eee;
}

.header .menu {
  padding-top: 20rpx;
}

.arrow-view {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-bottom: 2px solid #222;
  border-left: 2px solid #222;
  display: inline-block;
  transform: rotate(45deg);
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.container {
  width: 690rpx;
  padding: 30rpx;
  text-align: center;
  margin-top: 40%;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border:2px solid rgba(250,190,0,1);
  margin: 30rpx auto;
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  height: 24px;
  font-size: 20px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  line-height: 24px;
  margin-bottom: 40rpx;
}

.tips {
  height: 35px;
  font-size: 13px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 17px;
}

.tips view {
  margin: 20rpx 0;
}

.btn {
  line-height: 48px;
  height: 48px;
  background: linear-gradient(137deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  border-radius: 5px;
  margin-top: 80rpx;
  color: #333333;
}

.btn::after {
  border: none;
}

.btn-false {
  line-height: 44px;
  height: 44px;
  background: gray;
  border-radius: 22px;
  margin-top: 80rpx;
  color: white;
}

.agreement {
  text-align: center;
  margin-top: 42rpx;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.agreement icon, .agreement text {
  vertical-align: middle;
}

.cancel {
  position: absolute;
  right: 40rpx;
}

.message .cancel {
  position: absolute;
  right: 300rpx;
}

icon {
  z-index: 9;
}

.bottom-text {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(250, 190, 0, 1);
}
