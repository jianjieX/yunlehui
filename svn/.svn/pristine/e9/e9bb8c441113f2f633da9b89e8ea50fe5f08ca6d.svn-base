.header {
  width: 100%;
  background: #ffffff;
  position: fixed;
  top: 0;
  z-index: 999;
}

.navigation-bar {
  display: flex;
  align-items: center;
  text-align: center;
}

.page-title {
  line-height: 88rpx;
}

.arrow-view {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.arrow {
  content: "";
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  border-width: 0 0 4rpx 4rpx;
  border-color: #333;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}
