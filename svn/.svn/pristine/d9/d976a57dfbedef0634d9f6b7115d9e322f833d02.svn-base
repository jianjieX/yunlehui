/* pages/myHomePage/myHomePage.wxss */

page {
  height: 100%;
  background: #f0f0f0ff;
}

/* 右上角的背景图 */

.background-header {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 30rpx;
  z-index: 1;
}

/* 资料展示区域占位 */

.info-card-seat {
  width: 100%;
  height: 298rpx;
  /* background: #fff; */
  box-sizing: border-box;
  padding-left: 24rpx;
}

/* 资料展示区域 */

.info-card {
  position: absolute;
  width: 100%;
  height: 298rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 24rpx;
}

/* 个人资料 */

.head {
  height: 160rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}

.user-detail {
  margin-top: 24rpx;
  width: 100%;
  display: flex;
}

.user-detail-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #222;
}

.item-name {
  color: #999;
  font-size: 28rpx;
}

.nickname {
  flex: 1;
  height: 44rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.intro {
  
  margin-top: 4rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 44rpx;
  position: relative;
  z-index: 99;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width:440rpx;
}

.attention-style {
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  border-radius: 50rpx;
  background: linear-gradient(to left, #fadf5b, #f4bb2e);
  margin: auto 0;
}

.tabbar {
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

.tab-item.focus {
  color: #fabe00;
  position: relative;
}

.tab-item.focus::after {
  content: "";
  display: block;
  height: 4rpx;
  width: 84rpx;
  background: #fabe00;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.review-status-style {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
}

/**插画**/

.illustration-view {
  height: calc(100% - 600rpx);
  display: flex;
  text-align: center;
}

.illustration-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: auto;
}

.illustration-style {
  width: 328rpx;
  height: 366rpx;
}

.illustration-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}

/**瀑布流
**/

.content {
  margin: 0 20rpx;
  text-align: justify;
}

.item {
  background-color: #fff;
  margin: 1%;
  margin-bottom: 24rpx;
  display: inline-block;
  width: 100%;
  /* border-radius: 10rpx; */
  position: relative;
}

.item-ava {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  margin-left: 16rpx;
}

.item-ava1 {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #eee;
  border-radius: 50%;
}

.heart {
  width: 48rpx;
  height: 48rpx;
  margin-right: 8rpx;
}

.heart_ {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.heart_1 {
  display: flex;
  align-items: center;
}

.item-img {
  width: 100%;
  /* border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx; */
}

.item-title {
  font-size: 28rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(51, 51, 51, 1);
  margin: 10rpx 16rpx 0 16rpx;
  line-height: 30rpx;
  width: 90%;
}

.item .name {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 24rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}

/* .name image {
  flex: 0 0 30rpx;
} */

.item-title-box {
  display: flex;
  position: relative;
  width: 100%;
}

.name-title {
  color: rgba(102, 102, 102, 1);
  flex: 1;
  margin-left: 24rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.name text:last-child {
  color: rgba(102, 102, 102, 1);
  font-size: 20rpx;
}

.left, .right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
  position: relative;
}

.right {
  float: right;
}
