/* pages/serveMyDetail/serveMyDetail.wxss */

page {
  background: #f0f0f0;
}

/* 服务状态 */

.serve-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 168rpx;
}

.serve-state image {
  margin-top: 32rpx;
  width: 48rpx;
  height: 48rpx;
}

.serve-state view {
  margin-top: 22rpx;
  width: 80rpx;
  height: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

/* 中央图片 */

.serve-banner {
  width: 750rpx;
  height: 442rpx;
}

/* 概括信息 */

.generalization-text {
  background: #fff;
  width: 702rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  padding: 24rpx;
}

/* 预约信息 */

.reserve-information {
  margin: 16rpx 0rpx;
}

/* 预约标题 */

.datum-title view {
  font-size: 30rpx;
  font-weight: 400;
}

.datum-item {
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  height: 86rpx;
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.06), 0px 0px 0px 0px rgba(0, 0, 0, 0.06);
}
/* 备注 */
.datum-item-dis {
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  padding: 24rpx 24rpx;
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.06), 0px 0px 0px 0px rgba(0, 0, 0, 0.06);
}

.datum-item .datum-key {
  color: rgba(51, 51, 51, 1);
  font-size: 26rpx;
  font-weight: 400;
}

.datum-item .datum-value {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.remark-detailed {
  width: 80rpx;
  height: 34rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.remark-area {
  width: 622rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
  word-break: break-all;
}

/* 插图 */

.empty-container {
  background: #fff;
  height: 100%;
  width: 100%;
}

.illustration-view {
  margin-top: 208rpx;
  height: calc(100% - 600rpx);
  display: flex;
  text-align: center;
}

.illustration-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: auto;
}

.illustration-style {
  width: 328rpx;
  height: 366rpx;
}

.illustration-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}
