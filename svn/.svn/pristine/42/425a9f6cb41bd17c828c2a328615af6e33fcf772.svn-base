@import "../../components/assets/iconfont.wxss";

/**自定义头**/

.header {
  width: 750rpx;
  background: white;
  color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 999;
}

.header .navigation {
  padding-top: 12rpx;
  padding-left: 30rpx;
  display: flex;
}

.header .logo {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
  border: 1px solid #eee;
}

.header .menu {
  padding-top: 20rpx;
}

.header .menu .tab {
  width: 750rpx;
  display: flex;
}

.header .menu .tab .category-item {
  flex: 1;
  text-align: center;
}

.header .menu .tab .focus {
  color: #333;
}

.header .menu .tab .focus::after {
  content: '';
  display: block;
  width: 40%;
  height: 6rpx;
  background: #333;
  transform: translateX(-50%);
  margin-left: 50%;
}

.arrow-view {
  width: 5%;
  height: 100%;
  left: 0;
  z-index: 999;
  position: relative;
}

.arrow {
  width: 22rpx;
  height: 22rpx;
  border-bottom: 2px solid black;
  border-left: 2px solid black;
  position: absolute;
  transform: rotate(45deg);
  top: 18rpx;
  left: 2rpx;
}

/**故事标题**/

.story-title-view {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  flex-flow: row;
  border-top: 1px solid #eee;
  position: relative;
}

.title-style {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  margin-left: 32rpx;
}

.required-view {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.title-input {
  width: 65%;
  height: 104rpx;
  line-height: 104rpx;
  margin-left: 24rpx;
  font-size: 28rpx;
}

.remaining-word {
  position: absolute;
  right: 24rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.relation-row{
  display: flex;
  flex-flow: row;
  align-items: center;
  margin-left: 36rpx;
  width: 65%;
}

.relation-text {
  color: rgba(102, 102, 102, 1);
  margin-left: 36rpx;
  width: 65%;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 28rpx;
}

/**分割线**/

.line-view {
  width: 700rpx;
  height: 2rpx;
  background-color: #eee;
  margin: 0 auto;
}

/***故事头图***/

.story-head-img {
  width: 100%;
  height: 208rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
}

.upload-img-view {
  width: 160rpx;
  height: 160rpx;
  border: 1px dashed rgba(0, 0, 0, 0.2);
  margin: auto 24rpx;
}

.head-img-style {
  width: 48rpx;
  height: 48rpx;
  margin: 24rpx auto 0 auto;
  display: block;
}

.add-img-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  text-align: center;
}

.add-img-text-top {
  margin-top: 12rpx;
}

.arrow-right {
  width: 14rpx;
  height: 14rpx;
  border-bottom: 2px solid rgba(102, 102, 102, 1);
  border-left: 2px solid rgba(102, 102, 102, 1);
  transform: rotate(225deg);
  margin: auto 16rpx;
}

.arrow-down {
  width: 14rpx;
  height: 14rpx;
  border-bottom: 2px solid rgba(102, 102, 102, 1);
  border-left: 2px solid rgba(102, 102, 102, 1);
  transform: rotate(315deg);
  margin: auto 16rpx;
}

/**底部**/

.bottom-view {
  width: 100%;
  height: 88rpx;
  background: rgba(232, 232, 232, 1);
  position: fixed;
  bottom: 0;
  z-index: 888;
}

.bottom-flex-view {
  width: 76%;
  display: flex;
  align-items: center;
}

.select-view {
  width: 100%;
  height: 92rpx;
  background: rgba(243, 243, 243, 1);
  position: fixed;
  bottom: 88rpx;
  z-index: 888;
}

.scroll-style {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.release {
  width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: rgba(250, 190, 0, 1);
  border-radius: 4rpx;
  position: fixed;
  bottom: 14rpx;
  right: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.be-link-img {
  width: 38rpx;
  height: 38rpx;
  display: block;
  margin: auto;
  padding-top: 16rpx;
}

/**富文本编辑器**/

/* .wrapper {
  padding: 5px;
} */

.iconfont {
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  /* border: 1px solid #ccc; */
  border-bottom: 0;
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
  box-sizing: border-box;
  padding: 12px 15px;
  width: 100%;
  min-height: 30vh;
  height: auto;
  /* border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
  background: #fff;
  /* margin-top: 11px; */
  font-size: 16px;
  line-height: 1.5;
}

.ql-active {
  color: #06c;
}

.mask {
  width: 750rpx;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.3;
  top: 0;
  z-index: 890;
}

.mask_2 {
  width: 750rpx;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.3;
  top: 0;
  z-index: 990;
}

.dialog {
  width: 750rpx;
  height: 600rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 900;
}

.dialog_2 {
  width: 500rpx;
  height: 300rpx;
  background: #fff;
  position: fixed;
  top: 40%;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 999;
}

.dialog-title {
  color: #222;
  margin: 10rpx 0 0 10rpx;
}

.dialog-cancel {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.dialog-class {
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
}

.dialog-scroll {
  height: 450rpx;
  margin-top: 40rpx;
}

.dialog-already-select {
  margin-top: 10rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.dialog-input {
  width: 80%;
  margin: 20rpx auto;
  border: 1px solid #eee;
}

.jump-over {
  width: 80%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
}

.jump-view {
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 10rpx;
}

.jump-left {
  margin-left: 20%;
}

.link-class-view {
  margin-top: 30rpx;
  color: #222;
  font-size: 34rpx;
  font-weight: 600;
  padding-left: 24rpx;
  background-color: #fff;
}

.link-class-name {
  margin: 10rpx 24rpx;
  color: #666;
  font-size: 30rpx;
}

.delete-class {
  border: 1px solid #eee;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin: auto 0;
}

/**分类框**/

.classification-box {
  width: 700rpx;
  background: rgba(250, 190, 0, 0.06);
  border-radius: 4rpx;
  margin: 0 auto;
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.classification-view {
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(0, 0, 0, 1);
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  margin: 12rpx;
  position: relative;
  padding: 0 10rpx;
}

.content-trigon-zhijiao {
  width: 0px;
  height: 0px;
  border-color: rgba(255, 255, 255, 0) #FABE00 #FABE00 rgba(255, 255, 255, 0);
  border-width: 10rpx 10rpx 10rpx 10rpx;
  border-style: solid;
  position: absolute;
  right: 0;
  bottom: 0;
}

/**遮罩层**/

.submit-mask {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
  z-index: 9000;
  position: fixed;
  top: 0;
  left: 0;
}
