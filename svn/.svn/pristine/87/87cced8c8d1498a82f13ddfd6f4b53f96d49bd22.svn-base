@import "../../wxParse/wxParse.wxss";

/* page {
  background-color: #f3f6fd;
} */

.the-reason-view {
  background: linear-gradient(136deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  padding: 36rpx 40rpx;
}

.the-reason-title {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.the-reason-inform {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 26rpx;
}

.related-information-view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 15rpx;
  background-color: white;
  display: flex;
  flex-flow: row;
}

.related-inform-outer {
  width: 718rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-wrap: wrap;
}

.related-inform-body {
  width: 340rpx;
  height: 450rpx;
  margin: 24rpx 8rpx 10rpx 8rpx;
  border-radius: 15rpx;
  background-color: white;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.related-inform-img {
  width: 340rpx;
  height: 340rpx;
  border-radius: 15rpx 15rpx 0 0;
}

.related-inform-text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.bottom-tab-view {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  display: flex;
  flex-flow: row;
}

.bottom-button {
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(250, 190, 0, 1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin: auto;
}

.yellow-block {
  width: 8rpx;
  height: 48rpx;
  margin-top: 20rpx;
  background-color: #f4bb2e;
}

.share-button {
  width: 580rpx;
  height: 75rpx;
  line-height: 75rpx;
  margin-top: 12.5rpx;
  color: white;
  background-color: #ff5850;
  border-radius: 40rpx;
  text-align: center;
}

.favorite-num {
  width: 20%;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

/* .content {
  margin: 20rpx 20rpx 0 20rpx;
  text-align: justify;
} */

.item {
  background-color: #fff;
  margin: 1%;
  margin-bottom: 20rpx;
  display: inline-block;
  width: 100%;
  border-radius: 10rpx;
  position: relative;
}

.item-ava {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #eee;
  border-radius: 50%;
}

.heart {
  width: 30rpx;
  height: 26rpx;
  margin-right: 8rpx;
}

.heart_ {
  display: flex;
  align-items: center;
}

.item-img {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.item-title {
  font-size: 28rpx;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 10rpx 8rpx 24rpx 8rpx;
  line-height: 30rpx;
  width: 90%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.left, .right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.right {
  float: right;
}

.top-img {
  width: 100%;
  margin-top: 40rpx;
}

.top-img image {
  width: 100%;
  height: 480rpx;
}

.author-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row;
  margin-top: 40rpx;
}

.avatar-view {
  width: 20%;
}

.avatar-style {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  display: block;
  margin: auto;
}

.name-and-signature {
  width: 60%;
}

.text-style {
  color: #222;
  font-size: 30rpx;
  margin-top: 12rpx;
}

.text-color {
  color: #999;
  font-size: 26rpx;
}

.attention-style {
  width: 130rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: white;
  border-radius: 50rpx;
  background: linear-gradient(to left, #fadf5b, #f4bb2e);
  margin: auto 0;
}

/**关联分类**/

.tip-view {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.tip-text {
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(250, 190, 0, 1);
  box-shadow: 0px -2rpx 4rpx 0px rgba(255, 255, 255, 0.4);
  border-radius: 12rpx 0;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-right: 20rpx;
  text-align: center;
  padding: 0 16rpx;
}

/**关联商品**/

.related-goods-view {
  width: 100%;
  height: 184rpx;
  margin-top: 40rpx;
}

.message-item-view {
  width: 692rpx;
  height: 184rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  margin-top: 2rpx;
  display: flex;
}

.commodity-img-view {
  width: 208rpx;
  height: 208rpx;
  display: flex;
  align-items: center;
}

.commodity-img-style {
  width: 160rpx;
  height: 160rpx;
  display: block;
  margin: auto;
}

.copywriting-view {
  width: 518rpx;
  margin: 24rpx 24rpx 24rpx 0;
}

.commodity-title-style {
  height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang-SC;
  font-weight: 500;
}

.commodity-price-view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  position: relative;
}

.pay-button {
  width: 128rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: rgba(250, 190, 0, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  position: absolute;
  right: 0;
  bottom: 14rpx;
}

.commodity-strict-select {
  width: 64rpx;
  height: 32rpx;
  background: rgba(255, 88, 80, 1);
  border-radius: 0px 4px 0px 4px;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 0 10rpx;
}

.commodity-our-shop {
  width: 64rpx;
  height: 32rpx;
  background: rgba(250, 190, 0, 1);
  border-radius: 0px 4px 0px 4px;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 0 10rpx;
}

.content {
  box-sizing: border-box;
}

.article-title {
  padding: 20rpx;
  font-size: 44rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.article {
  margin: 30rpx 0;
}

.wxParse-img {
  margin-top: 20rpx;
  display: block;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.wxParse-p {
  text-indent: 2em;
  margin-top: 20rpx;
  color: #0c0c0c;
  line-height: 50rpx;
  font-size: 34rpx;
  padding: 0 30rpx 30rpx;
  text-align: justify;
}
