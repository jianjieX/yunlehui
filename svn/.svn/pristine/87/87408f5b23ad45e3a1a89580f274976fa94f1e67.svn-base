</view>

<view class="my-inform-view my-inform-margin-top" >
  <view class="my-inform-item" bindtap="callPhone" data-phone="{{shopTel}}">
    <view>店铺客服</view>
    <view class="phone-style">{{shopTel}}</view>
    <view class="arrow"></view>
  </view>
</view>