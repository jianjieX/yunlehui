/* pages/myServe/myServe.wxss */
page{
  height:100%;
}
/* 白色背景 */
.page-style-empty{
  height: 100%;
  background:#ffffff;
}
/* 灰色背景 */
.page-style{
  height: 100%;
  background:#f0f0f0;
}

/* 导航 */
.nav {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  box-sizing: border-box;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  background: #fff;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
}


.nav view {
  flex: 1;
  height: 100%;
  text-align: center;
}

.focus {
  color:#333333;
  font-weight:500;
  position: relative;
}

.focus::after{
  display: block;
  content:'';
  position: absolute;
  width: 32rpx;
  height:4rpx;
  background:#FABE00;
  left:50%; 
  transform: translate(-50%);
  z-index:999;
  bottom:0;
}

/* 我的服务主体展示区 */

.serve-item {
  
  flex: 1;
  display: flex;
  height: 160rpx;
  padding: 24rpx 24rpx 16rpx 24rpx;
  border-bottom: 2rpx #cdcdcd solid;
  background: #fff;
  flex-direction: row;
  
}

.serve-outTime-background {
  
  position: relative;
  overflow: hidden;
  background: #e5e5e5;
  border-bottom: 0rpx #cdcdcd solid;
}

/* .img-container {
  width: 264rpx;
  height: 152rpx;
  
 
} */

/* 失效水印 */
.serve-outTime-background::after {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  z-index: 99;
  background: #999;
  width: 200rpx;
  height: 52rpx;
  text-align: center;
  content: '已失效';
  display: block;
  position: absolute;
  top: 0rpx;
  transform: rotate(-45deg) translate(-76rpx, -36rpx);
  line-height: 52rpx;
}

.serve-item image {
  width: 264rpx;
  height: 152rpx;
  border-radius: 4rpx;
}

.serve-item .serve-text-container {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 失效项背景色 */
.serve-item .serve-text-container  .serve-outTime-text {
  color: #666;
}
/* 标题 */
.serve-item .serve-text-container .serve-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  margin-bottom: 48rpx;
}


/* 备注 */
.serve-item .serve-text-container .serve-remark {
  width: 414rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 时间 */
.serve-time-container{
display: flex;
justify-content: space-between;
margin-top: 10rpx;
}
.serve-item .serve-text-container .serve-time {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  
}

/* 插图 */
.illustration-view {
  margin-top: 222rpx;
  /* height: calc(100% - 600rpx); */
  display: flex;
  text-align: center;
}

.illustration-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: auto;
}

.illustration-style {
  width: 328rpx;
  height: 366rpx;
}

.illustration-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}

