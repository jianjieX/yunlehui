/** 消息中心页面css */

page {
  height: 100%;
}

.message-view {
  margin-top: 20rpx;
}

.message-item-view {
  width: 100%;
  height: 208rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.1);
  margin-top: 2rpx;
  display: flex;
}

.commodity-img-view {
  width: 208rpx;
  height: 208rpx;
  display: flex;
  align-items: center;
}

.commodity-img-style {
  width: 160rpx;
  height: 160rpx;
  display: block;
  margin: auto;
}

.copywriting-view {
  width: 518rpx;
  margin: 24rpx 24rpx 24rpx 0;
}

.commodity-title-style {
  height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang-SC;
  font-weight: 500;
}

.commodity-strict-select {
  width: 64rpx;
  height: 32rpx;
  background: rgba(255, 88, 80, 1);
  border-radius: 0px 4px 0px 4px;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 0 10rpx;
}

.commodity-our-shop{
  width: 64rpx;
  height: 32rpx;
  background:rgba(250,190,0,1);
  border-radius: 0px 4px 0px 4px;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 0 10rpx;
}

.reply-unread {
  position: relative;
  height: 40rpx;
}

.red-point {
  width: 20rpx;
  height: 20rpx;
  background: rgba(255, 88, 80, 1);
  border-radius: 50%;
  position: absolute;
  right: 0;
}

.reply-and-time {
  position: relative;
  bottom: 0;
  display: flex;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
}

.reply-text {
  width: 364rpx;
}

.reply-time {
  position: absolute;
  right: 0;
}

.color-readed {
  color: rgba(153, 153, 153, 1);
}

.color-unread {
  color: rgba(102, 102, 102, 1);
}

/**插画**/

.illustration-view {
  height: calc(100% - 400rpx);
  display: flex;
  text-align: center;
}

.illustration-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: auto;
}

.illustration-style {
  width: 328rpx;
  height: 366rpx;
}

.illustration-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}
