@import "../../components/chat-input/chat-input.wxss";

page {
  background: #f3f6fd;
}

/**供应商信息**/

.shop-info {
  width: 100%;
  height: 88rpx;
  background: #f4e7bd;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  z-index: 99999;
}

.shop-header {
  margin-left: 24rpx;
  width: 70rpx;
  height: 70rpx;
}

.shop-header image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.shop-name {
  color: #222;
  font-size: 32rpx;
  margin-left: 16rpx;
}

.shop-tag {
  color: #ff5850;
  font-size: 20rpx;
  width: 68rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 4rpx;
  border: 1px solid rgba(255, 88, 80, 1);
  margin-left: 8rpx;
}

/**商品详情**/

.product-details-view {
  width: 704rpx;
  height: 184rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 16rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  position: fixed;
  top: 22rpx;
  left: 28rpx;
  z-index: 100;
  /* margin: 22rpx auto 0 auto; */
  display: flex;
}

.product-img-view {
  width: 184rpx;
  height: 184rpx;
  display: flex;
  align-items: center;
}

.product-img-style {
  width: 160rpx;
  height: 160rpx;
  display: block;
  margin: auto;
}

.product-inform-view {
  width: 484rpx;
  height: 160rpx;
  margin-top: 12rpx;
  font-size: 26rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.product-title-style {
  width: 484rpx;
  height: 80rpx;
}

.product-price-view {
  width: 100%;
  height: 80rpx;
  display: flex;
  position: relative;
}

.product-price-style {
  line-height: 52rpx;
  position: absolute;
  bottom: 0;
}

.to-pay-view {
  width: 128rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(250, 190, 0, 1);
  border-radius: 4rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
}

/* 聊天内容样式 */

.message-container {
  width: 100%;
  /* height: 820rpx; */
  display: flex;
  flex-direction: column;
  /* margin: 118rpx 0 0 0; */
}

.message-item {
  width: 100%;
  min-height: 88rpx;
  overflow: hidden;
  margin: 20rpx 0;
  position: relative;
}

.message-time {
  width: 90%;
  margin: 0 auto 20rpx auto;
  color: #999;
  font-size: 26rpx;
}

.time-fl {
  text-align: left;
}

.time-fr {
  text-align: right;
}

.message-item .arrows.fr {
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-left: 16rpx solid #fabe00;
  position: absolute;
  top: 74rpx;
  right: 123rpx;
}

.message-item .arrows.fl {
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-right: 16rpx solid #fabe00;
  position: absolute;
  top: 74rpx;
  left: 123rpx;
}

.message-item .avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  /* background: #0ff; */
  margin: 0 24rpx;
}

.text-message {
  min-height: 88rpx;
  line-height: 60rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  background: #fabe00;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  max-width: 520rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.img-message {
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  max-width: 520rpx;
}

.img-message image {
  max-width: 480rpx;
}

.fr {
  float: right;
}

.fl {
  float: left;
}
