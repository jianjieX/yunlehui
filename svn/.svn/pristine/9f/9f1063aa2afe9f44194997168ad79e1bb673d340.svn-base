/* 商品详情页css */
@import "../../wxParse/wxParse.wxss";

page {
  padding-bottom: 130rpx;
}

.header {
  width: 100%;
  background: #f4bb2e;
  position: fixed;
  top: 0;
  z-index: 999;
}

.navigation-bar {
  display: flex;
  align-items: center;
  text-align: center;
}

.page-title {
  line-height: 88rpx;
  font-family:Heiti SC,"黑体-简";
  font-size: 32rpx;

}

.arrow-view {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.arrow {
  content: "";
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  border-width: 0 0 4rpx 4rpx;
  border-color: #333;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.swiper {
  width: 100%;
  height: 750rpx;
  background: #f7f7f7;
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.slide-image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.select {
  vertical-align: middle;
  display: inline-block;
  width: 64rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  margin-right: 2rpx;
  margin-top: -5rpx;
  background: rgba(255, 88, 80, 1);
  border-radius: 4rpx 0 4rpx 0;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.content {
  padding: 24rpx 30rpx;
  background: #fff;
  position: relative;
}

.goods-tag {
  width: 38rpx;
  height: 46rpx;
  position: absolute;
  top: 0;
  right: 22rpx;
  z-index: 99;
}

.content .goodsPrice {
  font-size: 44rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  margin-bottom: 24rpx;
}

.goodsDesc {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 4rpx 24rpx 24rpx 24rpx;
}

.goodsDesc .title {
  font-size: 36rpx;
  position: relative;
  padding-left: 30rpx;
  margin: 24rpx 0;
}

.goodsDesc .title::after {
  content: "";
  position: absolute;
  width: 14rpx;
  height: 50rpx;
  background: #f4bb2e;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.footer {
  width: 100%;
  height: 112rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background: #fff;
}

.footer .footer-item {
  width: 112rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  font-size: 20rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.footer image {
  width: 48rpx;
  height: 48rpx;
}

.footer button {
  background: #fff;
  box-sizing: border-box;
  margin: 0;
  line-height: normal;
}

.footer button::after {
  border: none;
}

.footer .shopcar-btn {
  position: relative;
}

.footer .dot {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 50%;
  right: 14rpx;
  top: 8rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 9;
  background: rgba(255, 88, 80, 1);
  font-family: PingFang-SC;
  font-weight: 500;
}

.button-group {
  display: flex;
  height: 100%;
}

.buy-group {
  flex: 1;
  display: flex;
  height: 100%;
}

/* 加入购物车按钮 */

.footer .add-shopcar {
  flex: 1;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 1);
  font-size: 32rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}

.footer .buy {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 16rpx 0;
  align-items: center;
  background: #f4bb2e;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.footer .buy1 {
  flex: 1;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  background: #f4bb2e;
  font-size: 32rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.mask {
  width: 750rpx;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.3;
  top: 0;
  z-index: 99;
}

/* 规格弹窗 */

.dialog {
  width: 750rpx;
  max-height: 900rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.dialog .goods {
  padding: 0 24rpx;
  margin-bottom: 60rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
}

.dialog .goods .cancel-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.dialog .goods .spec-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  position: absolute;
  top: -56rpx;
  border: 1px solid #ededed;
}

.dialog-goods-info {
  height: 144rpx;
  margin-left: 224rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 32rpx 0;
}

.dialog-spec-price {
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 60rpx;
}

.dialog-spec-price text {
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(245, 35, 64, 1);
  font-size: 24rpx;
  padding-left: 16rpx;
}

.dialog-spec {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.dialog .spec {
  box-sizing: border-box;
  /* max-height: 400rpx; */
  overflow: scroll;
}

.spec-title {
  line-height: 90rpx;
  font-size: 28rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.spec-value {
  display: flex;
  flex-wrap: wrap;
}

.spec-value-item {
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border: 2rpx solid rgba(153, 153, 153, 1);
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  margin-right: 32rpx;
  margin-bottom: 16rpx;
  position: relative;
  box-sizing: border-box;
}

.dialog .spec .checked {
  border: 1px solid rgba(0, 0, 0, 1);
  color: #333;
}

.dialog .spec .checked::after {
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-right: 16rpx solid transparent;
  border-left: 16rpx solid transparent;
  border-top: 16rpx solid #fabe00;
  transform: rotate(-45deg);
  right: -11rpx;
  bottom: -3rpx;
}

.dialog .spec .disabled {
  border: none;
  color: #999;
  background: rgba(0, 0, 0, 0.1);
}

.spec-main,
.spec-sub {
  padding: 0 24rpx;
}

.dialog .num {
  padding: 0 24rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

/*主容器*/

.stepper {
  width: 180rpx;
  height: 44rpx;
  /*给主容器设一个边框*/
  border: 1px solid #ededed;
  border-radius: 8rpx;
  vertical-align: middle;
}

/*加号和减号*/

.stepper text {
  width: 50rpx;
  line-height: 44rpx;
  text-align: center;
  float: left;
  box-sizing: border-box;
  color: #999;
}

/*数值*/

.stepper input {
  box-sizing: border-box;
  width: 80rpx;
  height: 44rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ededed;
  border-right: 1px solid #ededed;
  color: #666;
}

/*禁用样式*/

.stepper .disabled {
  color: #999;
  background: rgba(0, 0, 0, 0.1);
}

.dialog .button {
  width: 702rpx;
  height: 88rpx;
  margin: 3% 24rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(250, 190, 0, 1);
  border-radius: 8rpx;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

/* 分享弹窗 */

.commodity_attr_box .share {
  position: relative;
  text-align: center;
  margin: 0 auto;
  font-size: 1rem;
}

.commodity_attr_box .close {
  display: inline-block;
  position: absolute;
  right: 20px;
  color: #c8c8c8;
  font-size: 1rem;
}

.commodity_attr_box .sharemoney {
  text-align: center;
  font-size: 1rem;
  color: #ff5850;
  margin: 20rpx auto;
}

.commodity_attr_box .slide-image {
  width: 100rpx;
  height: 100rpx;
}

.conten {
  margin: 20rpx auto;
  width: 300px;
  height: 160rpx;
  padding: 10px;
  max-height: 120px;
  border: 1px solid #cfe5c8;
  border-radius: 30rpx;
  background: #fcf4df;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.inlei {
  text-align: center;
  margin: 50rpx auto;
}

.posi {
  position: relative;
}

.commodity_attr_box .button {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  opacity: 0;
  outline: none;
  display: inline-block;
  background-color: transparent;
  padding-left: 0rpx;
  padding-right: 0rpx;
  border: 1px solid white;
}

.margin {
  display: inline-block;
  margin: 0 30px;
}

.sma {
  font-size: 24rpx;
}

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  padding-top: 20px;
  height: 600rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.canvas-img {
  height: 400rpx;
  width: 400rpx;
  margin-bottom: -600rpx;
  margin-left: -600rpx;
}

/* 回到顶部 */

.goTop {
  height: 65rpx;
  width: 65rpx;
  position: fixed;
  bottom: 130rpx;
  background: rgba(0, 0, 0, 0.3);
  right: 24rpx;
  border-radius: 50%;
  font-size: 24rpx;
  text-align: center;
  line-height: 34rpx;
  padding: 10rpx;
  color: white;
}

/* tab切换 */

.tabbar {
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  margin-top: 24rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.tab-item.focus {
  position: relative;
}

.tab-item.focus::before {
  content: "";
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 74rpx;
  height: 4rpx;
  background: rgba(244, 187, 46, 1);
}

/* 富文本 */

.wxParse-img {
  display: block;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.wxParse-p {
  margin-top: 20rpx;
  color: #0c0c0c;
  line-height: 50rpx;
  font-size: 34rpx;
}

