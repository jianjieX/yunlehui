page{
  background: #F0F0F0;
}
.classification-view {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(250, 190, 0, 1);
  padding-left: 32rpx;
}

.my-inform-view {
  border-top:2rpx #D7D7D7 solid;
   border-bottom:2rpx #D7D7D7 solid;
  background-color: white;
  padding: 0 24rpx;
}

.my-avatar {
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  position: relative;
  display: flex;
}

.avatar-view {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  right: 0;
  top: 30rpx;
  border: 1px solid #eee;
}

.my-inform-item {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #222222;
  position: relative;
  display: flex;
  background-color: white;
  padding: 0;
}

.my-inform-item::after {
  border: none;
  padding: 0;
  border-radius: 0;
}

.my-inform-item-none {
  width: 100%;
  min-height: 100rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  position: relative;
}

.my-inform-margin-top{
  border:none;
  margin-top: 8rpx;
}

.inform-input {
  width: 70%;
  position: absolute;
  right: 0;
  top: 30rpx;
  font-size: 15px;
  color: #999;
  text-align: right;
}

.inform-picker {
  width: 70%;
  position: absolute;
  right: 0;
  font-size: 15px;
  color: #999;
  text-align: right;
}

.inform-textarea {
  width: 70%;
  height: 100%;
  overflow-y: hidden;
  word-break: break-all;
  word-wrap: break-word;
  position: absolute;
  right: 0;
  font-size: 15px;
  color: #999;
  text-align: right;
}

.line-view {
  margin-left: -24rpx;
  width: 750rpx;
  height: 1px;
  background: #E5E5E5;
}

.phone-style {
  color:#666666;
  position: absolute;
  right: 22rpx;
}

.arrow {
  width: 14rpx;
  height: 14rpx;
  border-bottom: 2px solid #666;
  border-left: 2px solid #666;
  transform: rotate(225deg);
  margin: auto 0;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
}

button {
  overflow: visible
}
