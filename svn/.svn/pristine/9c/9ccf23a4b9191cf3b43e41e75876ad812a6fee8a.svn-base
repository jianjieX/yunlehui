/* pages/phoneVerification/phoneVerification.wxss */

page {
  background: #fff;
  padding: 0 24rpx;
  width: 702rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
}

.page {
  width: 702rpx;
}

.input {
  background-color: #fff;
  width: 702rpx;
  display: flex;
  height: 88rpx;
  align-items: center;
  border: 1px solid #c5c5c5;
  border-radius: 44rpx;
}

.input input {
  height: 100%;
  flex: 1;
  font-size: 28rpx;
  padding-left: 32rpx;
  position: relative;
}

.message {
  margin-top: 32rpx;
  border: none;
}

.message input {
  width: 448rpx;
  height: 88rpx;
  border: 1px solid #c5c5c5;
  border-radius: 44rpx;
  position: relative;
}

.input .title {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 34rpx;
  border-right: 1px solid #c5c5c5;
}

.input .all {
  color: #fff;
  font-size: 28rpx;
}

.all {
  width: 220rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(136deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  margin-left: 32rpx;
}

.sec {
  width: 220rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff5850;
  background: linear-gradient(136deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
}

.btn-back {
  background-color: #fff;
}

.btn view {
  margin-top: 100rpx;
  text-align: center;
  color: #fff;
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(156deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  border-radius: 44rpx;
}

.agreement {
  text-align: center;
  margin-top: 16rpx;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.agreement icon, .agreement text {
  vertical-align: middle;
}

.cancel {
  position: absolute;
  right: 40rpx;
}

.message .cancel {
  position: absolute;
  right: 300rpx;
}

icon {
  z-index: 9;
}
