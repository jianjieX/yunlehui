@import "../../components/dialog/dialog.wxss";

page {
  background: #f0f0f0;
  padding-bottom: 100rpx;
}

/* 地址部分 */

.address {
  overflow: hidden;
  border-radius: 4px;
  background: rgba(255, 255, 255, 1);
  width: 702rpx;
  margin: 24rpx;
  padding-bottom: 26rpx;
}

/* 收货人信息 */

.person-info {
  display: flex;
  margin: 24rpx 0rpx 24rpx 88rpx;
}

.name {
  height: 38rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  line-height: 38rpx;
}

.phone {
  margin-left: 20rpx;
}

/* 位置信息 */

.address-info {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}

.address-img {
  width: 48rpx;
  height: 48rpx;
}

.address-text {
  margin-left: 16rpx;
  width: 560rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.isDefault {
  vertical-align: middle;
  display: inline-block;
  width: 60rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  background: rgba(255, 88, 80, 0.2);
  border-radius: 1px;
  color: #ff5850;
  text-align: center;
}

/* 订单列表部分 */

.order-list {
  margin: 24rpx 24rpx 0rpx 24rpx;
  background: #fff;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.shop-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  box-sizing: border-box;
  height: 88rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.shop-title image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.goods-item {
  height: 160rpx;
  padding: 24rpx;
  display: flex;
  padding-top: 0;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.goods-info {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
}

.goods-name {
  width: 352rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.goods-spec {
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-top: 14rpx;
}

.goods-spec text {
  color: rgba(102, 102, 102, 1);
  padding: 0 10rpx;
}

.price {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  flex: 1;
  text-align: right;
}

.price view:last-child {
  color: #999;
  text-align: right;
}

/*item 合计*/

.item-title-total {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 500;
}

.item-value-total {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 88, 80, 1);
}

.item-value-total span {
  font-size: 20rpx;
}

/* 小计部分 */

.total-list {
  margin: 0rpx 24rpx 24rpx 24rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  padding: 0rpx 0rpx 0rpx 24rpx;
  box-sizing: border-box;
}

.total-list-dis {
  margin: 0rpx 24rpx 24rpx 24rpx;
  background: #fff;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  padding: 24rpx 0rpx 24rpx 24rpx;
  box-sizing: border-box;
}

.total-item {
  color: rgba(102, 102, 102, 1);
  display: flex;
  height: 72rpx;
  justify-content: space-between;
  align-items: center;
}

.total-item-dis {
  font-size: 22rpx;
  height: 40rpx;
}

/* footer */

.footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}

/* 合计 */

.total-item {
  align-items: center;
  margin-right: 22rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.btn-all {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}

.footer .btn {
  text-align: center;
  margin: 0 8rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 180rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 4rpx;
  border:2px solid rgba(250,190,0,1);
}

.footer .btn-cancel {
  background: #ffffff;
  border: 2rpx solid rgba(250, 190, 0, 1);
}

.total-amount {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-right: 24rpx;
}

.t-value {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 88, 80, 1);
}

.discount-price {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(183, 117, 58, 1);
  line-height: 54rpx;
}

/* 核销码 */
.verificationCode-card {
  position: relative;
  margin: 24rpx auto 40rpx auto;
  width: 702rpx;
  height: 492rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.verificationStatus {
  margin-top: 32rpx;
  height: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.verificationCode-disc {
  margin: 16rpx 0;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.verificationCode-show {
  margin-bottom: 16rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.customer_service {
  top: 16rpx;
  right: 16rpx;
  position: absolute;
  width: 48rpx;
  height: 48rpx;
}

.verficationcode-out {
  margin-left: 24rpx;
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  padding-top: 16rpx;
  margin-bottom: -8rpx;
}