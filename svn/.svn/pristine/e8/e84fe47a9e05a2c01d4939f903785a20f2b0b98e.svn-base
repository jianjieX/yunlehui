/**精选商户**/
page {
  height: 100%;
  background-color: #ffffff;
}

/*搜索*/
.navigate-bar {
  border-top: 1px solid #0000001A;
  border-bottom: 1px solid #0000001A;
}

.input-view {
  width: 100%;
  height: 58rpx;
  position: relative;
  display: flex;
}

.input-view image {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  padding: 10rpx 22rpx;
  z-index: 999;
}

.search-bar {
  height: 82rpx;
  display: flex;
  padding-top: 24rpx;
  margin: 0 24rpx;
}

.search-bar input {
  width: 702rpx;
  height: 58rpx;
  background: rgba(0, 0, 0, 0.06);
  border-radius: 29px;
  font-size: 24rpx;
  padding-left: 66rpx;
  box-sizing: border-box;
}

/*分类*/
.header .menu {
  padding-left: 24rpx;
  border-bottom: 1px solid #0000001A;
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  line-height: 96rpx;
  font-size: 28rpx;
}

.header .menu .category-item {
  height: 100%;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  position: relative;
  padding-right: 44rpx;
}

.header .menu .focus {
  color: hsla(46, 100%, 49%, 1);
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFangSC;
  font-size: 32rpx;
}

.header .menu .focus::after {
  content: '';
  display: block;
  width: 32rpx;
  height: 4rpx;
  background: hsla(46, 100%, 49%, 1);
  transform: translateX(-50%);
  left: 28%;
  position: absolute;
  bottom: 0;
}

.scroll-view {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll-view view {
  display: inline-block;
}

.slide-image {
  width: 100%;
  height: 440rpx;
}

/*分类下商户*/
.list {
  width: 94%;
  height: 234rpx;
  margin: 0 auto;
  border-bottom: 1px solid #E2E2E2;
}

.list .list-top {
  padding-top: 24rpx;
  padding-bottom: 26rpx;
}

.list .left {
  width: 184rpx;
  height: 184rpx;
  border-radius: 4rpx;
}

.list .list-top .logo {
  width: 184rpx;
  height: 184rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
}

.list .right {
  padding-left: 200rpx;
}

.list .right .name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.list .right .address {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
  padding-bottom: 14rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;

}

.list .right .place {
  width: 276rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list .right .discount {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 32rpx;
  margin: 10rpx 0;
}

.list .right .coupon {
  width: 30rpx;
  height: 30rpx;
  background: rgba(255, 102, 51, 1);
  border-radius: 2px;
  color: #fff;
  display: inline-block;
  text-align: center;
  font-size: 22rpx;
  line-height: 30rpx;
}

.list .right .title {
  padding-left: 8rpx;
}

.list .address text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.bottom {
  font-size: 24rpx;
}

.empty {
  height: 40rpx;
}

.list .right .goodsName {
  width: 342rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}


/* 插图 */
.empty-container {
  background: #ffffff;
  height: 100%;
  width: 100%;
}

.merchant-view {
  padding-top: 168rpx;
  display: flex;
  text-align: center;
}

.merchant-border {
  width: 328rpx;
  height: 366rpx;
  display: block;
  margin: auto;
}

.merchant-style {
  width: 328rpx;
  height: 366rpx;
}

.merchant-text {
  font-size: 24rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin: 40rpx auto 0 auto;
}

.enter-btn{
  float: right;
  position: absolute;
  flex: 1;
  right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f4bb2e;
  font-size: 25rpx;
  padding: 5rpx 10rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  border-radius: 0rpx;
  z-index: 99999;

}