page {
  user-select: none;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  font-family: Arial, Helvetica, sans-serif;
  overflow-x: hidden;
}

.cropper {
  position: absolute;
  top: 0;
  left: 0;
}

.cropper-wrapper {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: #e5e5e5;
}

.cropper-buttons {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: rgba(0,0,0,0.95);
  color: #04b00f;
  z-index: 999;
}

.cropper-buttons view {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}


