page {
  background-color: #fff;
}

.header {
  width: 750rpx;
  background: white;
  font-size: 32rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 999;
}

.header .navigation {
  padding-top: 12rpx;
  padding-left: 30rpx;
  display: flex;
}

.arrow-view {
  width: 5%;
  height: 100%;
  left: 0;
  z-index: 999;
  position: relative;
}

.label {
  margin-left: 16rpx;
  color: #333;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
}

.arrow {
  width: 22rpx;
  height: 22rpx;
  border-bottom: 2px solid black;
  border-left: 2px solid black;
  position: absolute;
  transform: rotate(45deg);
  top: 18rpx;
  left: 2rpx;
}

.mywealth {
  width: 702rpx;
  height: 316rpx;
  background: linear-gradient(312deg, rgba(239, 202, 81, 1) 0%, rgba(253, 179, 38, 1) 100%);
  box-shadow: 2px 2px 10px #efca51;
  border-radius: 8rpx;
  margin: 24rpx auto;
}

.mywealth .wealth-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.line-view {
  width: 646rpx;
  height: 2rpx;
  background-color: #eee;
  margin: 20rpx auto;
}

.line {
  width: 32rpx;
  height: 4rpx;
  background-color: #fabe00;
  margin-top: -4rpx;
  margin-left: 14.5%;
}

.line1 {
  width: 32rpx;
  height: 4rpx;
  background-color: #fabe00;
  margin-top: -4rpx;
  margin-left: 47.5%;
}

.line2 {
  width: 32rpx;
  height: 4rpx;
  background-color: #fabe00;
  margin-top: -4rpx;
  margin-left: 80.5%;
}

.line3 {
  width: 32rpx;
  height: 4rpx;
  background-color: #fabe00;
  margin-top: -4rpx;
  margin-left: 618rpx;
}

.display-content {
  display: flex;
  position: relative;
  top: -10rpx;
}

.display-content .wealth-item {
  margin-left: 140rpx;
}

.display-content .wealth-item .price {
  margin-left: 25rpx;
}

.mywealth .wealth-item .total-price {
  font-size: 72rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 400;
  color: #fff;
  margin: 16rpx 0 0 32rpx;
}

.mywealth .wealth-item .price {
  font-family: PingFangSC-Semibold;
  color: #fff;
  font-size: 32rpx;
}

.mywealth .wealth-item .lable {
  font-family: PingFangSC-Semibold;
  color: #fff;
  font-size: 24rpx;
}

.mywealth .wealth-item view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.mywealth .wealth-item view .mid {
  font-size: 24rpx;
  font-family: PingFang-SC-Semibold;
  font-weight: 400;
  color: #fff;
  margin: 32rpx 0 0 32rpx;
}

.mywealth .wealth-item view .display, .mywealth .wealth-item view .hide {
  width: 40rpx;
  height: 40rpx;
  margin: 31rpx 346rpx 0 0;

}

.mywealth .wealth-item view .wealth-record {
  font-size: 20rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #fff;
  margin: 40rpx 30rpx 0 0;
}

.mywealth .wealth-item view .wealth-record-icon {
  width: 18rpx;
  height: 18rpx;
  margin: 6rpx 0 0 8rpx;
}

.mywealth .wealth-item image {
  width: 100%;
}

.withdraw-button-view {
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #fff;
  border-radius: 30rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC-Semibold;
  font-weight: 500;
  color: #fbb427;
  margin: 28rpx 24rpx 0 0;
}

.list {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin-top: 46rpx;
}

.list .nav {
  width: 100%;
  display: flex;
  height: 96rpx;
  border-bottom: 1px solid #f1f1f1;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  white-space: nowrap;
  background: #fff;
}

.list .scroll-item {
  height: 96rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 32rpx;
  display: inline-block;
  width: 33%;
  color: #666;
}

.list .focus {
  height: 91rpx;
  line-height: 91rpx;
  text-align: center;
  font-size: 32rpx;
  flex-wrap: 600;
  font-family: PingFang-SC-Medium;
  display: inline-block;
  width: 33%;
  color: #f5bb2e;
  /* border-bottom: 5rpx solid #f5bb2e; */
}

.list .focus::after {
  content: '__';
  display: block;
  width: 70%;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.list .content {
  margin-top: 5rpx;
}

.list .content-item {
  width: 100%;
  height: 112rpx;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.list .content-item .item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 50rpx;
}

.add-icon {
  color: red;
  font-size: 24rpx;
}

.sub-icon {
  color: green;
  font-size: 24rpx;
}

.list .content-item .item .item-id {
  color: #333;
  font-size: 26rpx;
  margin: 16rpx 0 16rpx 0;
}

.list .content-item .item .item-time {
  color: rgba(102, 102, 102, 1);
  font-size: 24rpx;
}

.list .content-item .item .price {
  line-height: 112rpx;
  color: rgba(51, 51, 51, 1);
  font-size: 24rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
}

.no-content-view {
  width: 100%;
  margin-top: 88rpx;
  height: 100%;
}

.no-content-image {
  width: 340rpx;
  height: 240rpx;
  margin: 0 auto;
  display: block;
}

.no-content-text {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.no-content-text .text {
  padding: 5rpx 0;
  color: #666;
}
