page {
  background: #fff;
  padding-bottom: 120rpx;
}

.n-title {
  width: 654rpx;
  text-align: center;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.top-view {
  height: 400rpx;
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-title-view {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: rgba(196, 167, 110, 1);
  line-height: 50rpx;
  text-align: center;
}

.top-title-bar {
  width: 392rpx;
  height: 6rpx;
  background: linear-gradient(90deg, rgba(254, 235, 187, 1) 0%, rgba(196, 167, 110, 1) 49%, rgba(254, 231, 176, 1) 100%);
  opacity: 0.8;
  margin: 8rpx;
  border-radius: 0 0 50% 50%;
}

.top-box {
  margin: 24rpx;
}

.bottom-box {
  width: 654rpx;
  height: 132rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.s-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  margin: 22rpx;
  justify-content: center;
}

.s-line-left {
  width: 40rpx;
  height: 2rpx;
  margin: 24rpx;
  background: linear-gradient(90deg, #fff 0%, #fabe00 100%);
}

.s-line-right {
  width: 40rpx;
  height: 2rpx;
  margin: 24rpx;
  background: linear-gradient(90deg, #fabe00 0%, #fff 100%);
}

.icon-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.icon-box-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.item-icon {
  width: 76rpx;
  height: 76rpx;
  margin-right: 32rpx;
}

.tips-view {
  box-sizing: border-box;
  padding: 0rpx 56rpx;
}

.empty-bar {
  height: 16rpx;
  background: #f9f9f9;
}

.tips-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.tips-title-num {
  width: 42rpx;
  height: 42rpx;
  margin-right: 16rpx;
}

.tips-content {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin: 16rpx 0;
}

.page-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  background: #f9f9f9;
  color: #333;
  font-size: 34rpx;
  font-weight: 500;
}

.page-title .line {
  height: 4rpx;
  width: 50rpx;
  background: #e5e5e5;
  margin: 0 20rpx;
}

.posi-title {
  padding: 30rpx;
  height: 308rpx;
  border-bottom: 1px solid #f9f9f9;
  text-align: center;
  box-sizing: border-box;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  text-align: center;
}

.avator-text {
  color: #333;
  font-size: 34rpx;
}

.avator-tip {
  color: #999;
  font-size: 28rpx;
}

.posi-title image {
  width: 120rpx;
  height: 120rpx;
}

.form-item {
  display: flex;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #f9f9f9;
  padding: 0 30rpx;
}

.title {
  width: 260rpx;
  color: #666;
  font-size: 34rpx;
}

.btn-area {
  display: flex;
}

.btn {
  width: 95%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: rgba(250, 190, 0, 1);
  position: fixed;
  bottom: 2%;
  left: 2.5%;
  z-index: 999;
  color: #333;
  border-radius: 8rpx;
}

.btn::after {
  border: 0;
}

.btn.gray {
  background: #f1f1f1;
}

.item-title {
  background: #f9f9f9;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 17px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(250, 190, 0, 1);
}

.type {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
}

.type icon {
  height: 36rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

.focus {
  color: rgba(250, 190, 0, 1);
}

.copy-btn {
  position: absolute;
  right: 24rpx;
  top: 0;
  border: 1px solid #f9f9f9;
  font-size: 28rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
}

.avatar.last {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  text-align: center;
}

.avatar.last image {
  width: 120rpx;
  height: 120rpx;
}

.legal-person-idcard, .shop-pic, .other-pic {
  border-bottom: 1px solid #f9f9f9;
  padding: 0 30rpx;
  padding-bottom: 30rpx;
}

.legal-person-idcard .title, .shop-pic .title, .other-pic .title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.pic-area {
  display: flex;
}

.pic-item {
  width: 340rpx;
  height: 194rpx;
  background: rgba(253, 253, 253, 1);
  border-radius: 4rpx;
  border: 1px solid rgba(237, 237, 237, 1);
  position: relative;
}

.pic-item .tip-view {
  width: 200rpx;
  height: 140rpx;
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.pic-item .tip-img {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.pic-item .tip-text {
  color: #222;
  font-size: 20rpx;
}

.pic-item .pic-item-img {
  width: 340rpx;
  height: 194rpx;
}

.pic-item .pic-item-bg {
  width: 340rpx;
  height: 194rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.pic-item:first-of-type {
  margin-right: 22rpx;
}

.pic-list {
  display: flex;
  flex-wrap: wrap;
}

.pic-list .pic-list-item {
  width: 160rpx;
  height: 160rpx;
  border: 1px dashed rgba(226, 226, 226, 1);
  margin: 10rpx 5rpx;
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.pic-list-item image {
  width: 160rpx;
  height: 160rpx;
}

.agreement {
  margin-top: 16rpx;
  padding: 0 30rpx;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.agreement icon, .agreement text {
  vertical-align: middle;
}

.addPicPic {
  width: 160rpx;
  height: 160rpx;
  border: 1px dashed rgba(226, 226, 226, 1);
  position: relative;
}

.addPicPic .camera {
  width: 36rpx;
  height: 32rpx;
  display: block;
  margin: 24rpx auto;
}

.addPicPic .cancel {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: -20rpx;
  top: -20rpx;
  z-index: 999;
}

/* 开通线下店铺 */

.offlineShop {
  display: block;
  padding: 0rpx 30rpx;
}

.offlineShop .tit {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.offlineShop .type {
  display: inline-block;
  width: 100rpx;
}

.offlineShop .type text {
  padding-left: 15rpx;
}

.offlineShop .type2 {
  margin-left: 80rpx;
}

.pickerStyle {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1)!important;
}
