/** 关联商品页面css */
@import "../../pages/messageList/messageList.wxss";

.fix {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 888;
  background: #fff;
  border-top:2rpx #E5E5E5FF solid;
}

.fix-gray-top {
  width: 100%;
  height: 24rpx;
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: #f6f6f6;
}

.input-view {
  width: 492rpx;
  height: 58rpx;
  position: relative;
  display: flex;
}

.search-bar {
  height: 82rpx;
  display: flex;
  padding-top: 24rpx;
  margin: 0rpx 24rpx 0 24rpx;
}

.search-bar input {
  width: 412rpx;
  height: 58rpx;
  background: rgba(0, 0, 0, 0.06);
  border-radius: 28rpx 0 0 28rpx;
  font-size: 24rpx;
  padding-left: 64rpx;
  box-sizing: border-box;
}

.search-bar .search-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 18rpx;
  top: 10rpx;
}

.cancle-view {
  width: 80rpx;
  height: 58rpx;
  border-radius: 0 28rpx 28rpx 0;
  position: absolute;
  left: 412rpx;
  background: rgba(0, 0, 0, 0.06);
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-bar .cancel-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-btn {
  width: 138rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: linear-gradient(142deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  border-radius: 28rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 1px;
  text-align: center;
  margin-left: 72rpx;
}

/**关联商品**/

.commodity-list-top {
  height: 106rpx;
}

.commodity-item-view {
  width: 100%;
  height: 208rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.1);
  margin-top: 2rpx;
  display: flex;
  color: rgba(51, 51, 51, 1);
}

.commodity-select-view {
  height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  position: relative;
}

.select-btn {
  width: 128rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 4rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
}

.already-select {
  color: rgba(153, 153, 153, 1);
  background: rgba(250, 190, 0, 1);
  opacity: 0.4;
}

.un-select {
  background: rgba(250, 190, 0, 1);
}

/**确定**/

.cofirm-body-view {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
}

.cofirm-btn {
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(250, 190, 0, 1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  position: fixed;
  bottom: 32rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 9999;
}

.pl-view {
  height: 120rpx;
}

/**严选本店标签**/

.tip-parent {
  position: relative;
}

.tip-view {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: 64rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: rgba(255, 88, 80, 1);
  border-radius: 0px 4rpx;
  color: white;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 500;
  text-align: center;
}

.strict-select-color {
  background: rgba(255, 88, 80, 1);
}

.our-shop-color {
  background: rgba(250, 190, 0, 1);
}

/* 插图 */

/* 为了区分类名后加了dis */

 .illustration-view-dis {
  margin-top: 168rpx;
  width: 100%;
}

 .illustration-border-dis {
  display: flex;
  flex-direction: column;
  
}

 .illustration-style-dis {
  width: 328rpx;
  height: 366rpx;
  margin:0 auto;
}

 .illustration-text-dis {
  padding-top: 40rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  text-align: center;
}
