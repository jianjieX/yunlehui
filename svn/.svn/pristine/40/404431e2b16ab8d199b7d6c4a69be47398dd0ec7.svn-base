/* pages/orderPaySuccess/orderPaySuccess.wxss */

page {
  background-color: #fff;
}

.header_bg {
  width: 100%;
  height: 312rpx;
  background: #f4bb2e;
  color: #fff;
  text-align: center;
}

.success-img {
  width: 64rpx;
  height: 64rpx;
}

.success-text {
  font-size: 32rpx;
}

.desc {
  color: #fff;
  font-size: 24rpx;
}

.btn {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.btn view {
  width: 180rpx;
  height: 60rpx;
  border: 1px solid #fff;
  border-radius: 40rpx;
  margin: 0 50rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.like {
  text-align: center;
  font-size: 16px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(250, 190, 0, 1);
  height: 44rpx;
  line-height: 44rpx;
  margin: 30rpx 0;
}

.like view {
  display: inline-block;
  vertical-align: middle;
}

.like .text {
  margin: 0 20rpx;
}

.like .line {
  width: 40rpx;
  height: 2rpx;
  background: #fabe00;
}

.goods-wrap{
  padding-bottom: 20rpx;
}
.goods-wrap .goods-header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  text-align: center;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(183, 117, 58, 1);
  padding-top: 32rpx;
  padding-bottom: 12rpx;
}

.goods-wrap .goods-header .title {
  width: 224rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(183, 117, 58, 1);
  line-height: 44rpx;
  margin: 0 16rpx;
}

.goods-wrap .goods-header .tag1 {
  width: 15rpx;
  height: 18rpx;
  background: linear-gradient(360deg, rgba(255, 232, 186, 1) 0%, rgba(250, 151, 0, 1) 100%);
  transform: rotate(40deg);
  border-radius: 5rpx;
}

.goods-wrap .goods-header .tag2 {
  width: 17rpx;
  height: 21rpx;
  background: linear-gradient(360deg, rgba(255, 232, 186, 1) 0%, rgba(250, 151, 0, 1) 100%);
  transform: rotate(40deg);
  border-radius: 5rpx;
}

.goods-wrap {
  width: 100%;
}

.goods-wrap, .goods-content {
  background: rgba(240, 240, 240, 1);
}

.goods-wrap .goods-row {
  padding: 0 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-wrap .goods-row .item {
  display: flex;
  position: relative;
  margin-top: 20rpx;
  flex-direction: column;
  width: 49%;
  height: 510rpx;
  background-color: #fff;
}

.goods-row .item .goodsImg {
  width: 100%;
  height: 335rpx;
  vertical-align: middle;
}

.goods-row .item .bottom {
  width: 92%;
  margin: 24rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

.goods-row .item .bottom .price {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(245, 35, 64, 1);
  margin-right: 5rpx;
}

.goods-row .item .tag {
  width: 64rpx;
  height: 32rpx;
  display: inline-block;
  background: rgba(255, 88, 80, 1);
  border-radius: 0px 4px 0px 4px;
  font-size: 22rpx;
  text-align: center;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 0 4rpx;
}

.goods-row .item .name {
  height: 74rpx;
  font-size: 28rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  word-break: break-all;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 15rpx 20rpx 0 20rpx;
}

.goods-row  .bottom  .enjoy-wrap {
  height: 26rpx;
  line-height: 26rpx;
  background: rgba(245, 35, 64, 0.08);
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 4rpx;
}

.goods-row  .bottom  .enjoy-wrap text {
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.goods-row  .bottom  .enjoy-wrap .price {
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #f52340;
}
.privilege-decorate{
  width:  40rpx;
  height: 40rpx;
}
