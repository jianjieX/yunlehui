  margin-right: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
}

.item .title {
  line-height: 100rpx;
  width: 116rpx;
}

.item .value {
