  margin-right: 8rpx;
}

.item .value .focus {
  color: rgba(250, 190, 0, 1);
}

.freightAmount {
  text-align: right;
}

.bottom-box {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.bottom-box .item {
  display: flex;
  justify-content: space-around;
}

.bottom-box .value {
  text-align: right;
  color: #222;
  font-size: 20rpx;
}

.bottom-box .item .title {
  width: 200rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.payMoney, .orderList .payType {
  box-sizing: border-box;
  margin: 0 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
}

.wxPay {
  box-sizing: border-box;
  margin: 0 30rpx;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f1f1f1;
}

.wxPay image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}

.down-arrow {
  display: inline-block;
  position: relative;
  width: 40rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.down-arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  transition: transform 0.3s;
  position: absolute;
  top: 50%;
  right: 10rpx;
  margin-top: -10rpx;
}

.down-arrow.active::after {
  transform-origin: center;
  transform: rotate(-135deg);
  transition: transform 0.3s;
}

.footer {
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
  z-index: 999;
}

.footer .freight {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 20rpx;
  color: #999;
  position: absolute;
  right: 400rpx;
}

.footer .pay {
  position: absolute;
  line-height: 76rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
  width: 180rpx;
  height: 76rpx;
  background: linear-gradient(131deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  right: 24rpx;
}

.footer .all {
  position: absolute;
  right: 225rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  color: #666;
}

.footer .num {
  line-height: 100rpx;
  font-size: 20rpx;
  color: #999;
  position: absolute;
  right: 390rpx;
}

.pay-mask {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 9000;
  position: fixed;
  top: 0;
  left: 0;
}

