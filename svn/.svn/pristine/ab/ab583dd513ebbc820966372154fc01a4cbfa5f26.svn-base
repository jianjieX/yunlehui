  width: 100%;
}

.item .value .type {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  display: inline-block;
}

.item .value .type icon {
