/* 提交订单页面css */

page {
  margin-bottom: 100rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background: rgba(240, 240, 240, 1);
}

.container {
  padding: 30rpx;
  background: #fff;
}

.container .item {
  min-height: 100rpx;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  align-items: center;
}

.container .item .key {
  width: 200rpx;
  margin-right: 30rpx;
}

picker {
  width: 100%;
}

.picker {
  width: 100%;
  font-size: 24rpx;
  line-height: 40rpx;
}

.container .height {
  height: 120rpx;
}

.default .item {
  padding: 0 30rpx;
  height: 120rpx;
  margin-top: 30rpx;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.select {
  vertical-align: middle;
  display: inline-block;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #ff5850;
  border-radius: 1rpx;
  color: #fff;
  font-size: 20rpx;
  margin-right: 10rpx;
  margin-top: -6rpx;
}

.address {
  width: 100%;
  height: 200rpx;
  background: #fff;
  position: relative;
  border-radius: 16rpx;
}

.address .isDefault {
  vertical-align: middle;
  display: inline-block;
  width: 60rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  background: rgba(255, 88, 80, 0.2);
  border-radius: 1px;
  color: #ff5850;
  text-align: center;
}

.address .address-info {
  padding: 24rpx;
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  align-items: center;
}

.address .address-info .icon {
  margin-right: 16rpx;
}

.address .info {
  width: 600rpx;
}

.address .address-info .icon image {
  margin-top: 9rpx;
  width: 48rpx;
  height: 48rpx;
}

.address .address-info .name {
  display: inline-block;
  margin-right: 16rpx;
}

.address .address-info .phone {
  display: inline-block;
  margin-right: 16rpx;
}

.address .address-info .addressInfo {
  color: #aaa;
  font-size: 13px;
  margin-top: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 新订单ui */

.shop-item {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx 0;
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.shop-title {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.shop-icon {
