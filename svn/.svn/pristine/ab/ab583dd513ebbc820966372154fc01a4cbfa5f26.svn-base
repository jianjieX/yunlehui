.price-num {
  width: 100rpx;
  height: 70rpx;
  font-size: 24rpx;
  text-align: right;
}

.num {
  font-size: 22rpx;
  color: #999;
}

.spec {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  background: rgba(244, 244, 244, 1);
