.mywealth {
  width: 700rpx;
  height: 316rpx;
  background: linear-gradient(314deg, rgba(116, 224, 253, 1) 0%, rgba(64, 158, 249, 1) 100%);
  border-radius: 8rpx;
}

.apply {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 107rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  color: #f4bb2e;
  padding: 0 10rpx;
  border: 1px solid #f4bb2e;
  border-radius: 12rpx;
  text-align: center;
}

.mywealth .wealth-item {
  flex: 1;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 13px;
}

.mywealth .wealth-item .img1 {
  width: 50rpx;
  height: 70rpx;
  align-items: center;
  display: flex;
}

.mywealth .wealth-item .img2 {
  width: 46rpx;
  height: 70rpx;
  align-items: center;
  display: flex;
}

.mywealth .wealth-item .img3 {
  width: 40rpx;
  height: 70rpx;
  align-items: center;
  display: flex;
}

.mywealth .wealth-item .img image {
  width: 100%;
  height: 100%;
}

.display-content {
  display: flex;
}

.mywealth .wealth-item .total-price {
  font-size: 52rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  margin-top: 8rpx;
}

.mywealth .wealth-item .price {
  color: white;
  font-size: 24rpx;
}

.mywealth .wealth-item .mid {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 247, 226, 1);
}

.mywealth .wealth-item image {
  width: 100%;
}

.withdraw-button-view {
  width: 320rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  border: 1px solid rgba(255, 255, 255, 1);
  text-align: center;
  font-size: 14px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 24rpx;
  margin-left: auto;
  margin-right: auto;
}

.list{
  width: 100%;
}

.list .list-item {
  margin: 40rpx auto 0 auto;
  width: 690rpx;
  height: 220rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 1px 1px 3px #f1f1f1, -1px -1px 3px #f1f1f1;
  padding: 30rpx;
}

.list .list-item .record {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}

.list .list-item .time {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 13px;
}

.no-content-view {
  width: 100%;
  margin-top: 40%;
}

.no-content-image {
   width: 262rpx;
  height: 196rpx;
  margin: 0 auto;
  display: block;
}

.no-content-text {
  width: 100%;
  text-align: center;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  margin-top: 48rpx;
}
