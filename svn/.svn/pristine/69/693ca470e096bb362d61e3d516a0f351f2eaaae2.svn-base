/* 活动详情页css */
@import "../../wxParse/wxParse.wxss";

page {
  background-color: #fff;
}

.header {
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 999;
}

.navigation-bar {
  display: flex;
  align-items: center;
  text-align: center;
}

.page-title {
  line-height: 88rpx;
}

.arrow-view {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.arrow {
  content: "";
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  border-width: 0 0 4rpx 4rpx;
  border-color: #333;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

/* ======内容区======== */

.content-wrap .list {
  display: flex;
  flex-direction: column;
}

.content-wrap .list .item-wrap {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0 auto;
}

.content-wrap .list .img-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.content-wrap .list .title {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  padding: 16rpx 24rpx;
  box-sizing: border-box;
}

.content-wrap .list .title text {
  color: rgba(255, 255, 255, 1);
}

.content-wrap .list .img-wrap image {
  width: 100%;
}

.footer {
  width: 100%;
  height: 112rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background: #fff;
}

.footer .footer-item {
  width: 250rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 16rpx 0;
  font-size: 20rpx;
  font-family: PingFang-SC;
  font-weight: 400;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.footer .item-text {
  font-size: 32rpx;
  color: rgba(102, 102, 102, 1);
}

.footer image {
  width: 48rpx;
  height: 48rpx;
}

.footer button {
  background: #fff;
  box-sizing: border-box;
  margin: 0;
  line-height: normal;
}

.footer button::after {
  border: none;
}

.footer .shopcar-btn {
  position: relative;
}

.footer .dot {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 50%;
  right: 14rpx;
  top: 8rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 9;
  background: rgba(255, 88, 80, 1);
  font-family: PingFang-SC;
  font-weight: 500;
}

.button-group {
  display: flex;
  height: 100%;
}

.btn-group {
  flex: 1;
  display: flex;
  height: 100%;
}

.footer .btn {
  border-radius: 0rpx;
  flex: 1;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  background: #f4bb2e;
  font-size: 32rpx;
  font-family: PingFang-SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.btn.disabled {
  background: rgba(250, 190, 0, 0.4);
  color: rgba(51, 51, 51, 0.4);
}

/* 回到顶部 */

.goTop {
  height: 65rpx;
  width: 65rpx;
  position: fixed;
  bottom: 130rpx;
  background: rgba(0, 0, 0, 0.3);
  right: 24rpx;
  border-radius: 50%;
  font-size: 24rpx;
  text-align: center;
  line-height: 34rpx;
  padding: 10rpx;
  color: white;
}

/* tab切换 */

.tabbar {
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  margin-top: 24rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.tab-item.focus {
  position: relative;
}

.tab-item.focus::before {
  content: "";
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 74rpx;
  height: 4rpx;
  background: rgba(244, 187, 46, 1);
}

.serve-detail-title {
  padding: 24rpx;
  width: 702rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

/* 富文本 */

.wxParse-img {
  display: block;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.wxParse-p {
  margin-top: 20rpx;
  color: #0c0c0c;
  line-height: 50rpx;
  font-size: 34rpx;
}

.sell-bar {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-sizing: border-box;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  /* background-color: gold; */
}

.line {
  width: 100%;
  height: 1rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.06), 0px -1px 0px 0px rgba(0, 0, 0, 0.06);
}

.sell-bar .sell-wrap {
  width: 100%;
  display: flex;
  /* background-color: rebeccapurple; */
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.sell-bar .sell-contnet-left, .sell-bar .sell-contnet-right {
  /* background-color: green; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.sell-bar .sell-contnet-left name {
  font-weight: 400;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
}

.sell-bar .sell-contnet-right .name {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.sell-bar  .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.sell-bar  .icon {
  width: 48rpx;
  height: 48rpx;
}

.sell-bar  .eye {
  width: 40rpx;
  height: 40rpx;
}

.serve-title {
  padding: 24rpx 24rpx 16rpx;
  width: 702rpx;
  height: 48rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.mask {
  width: 750rpx;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.3;
  top: 0;
  z-index: 99;
}

/* 规格弹窗 */

.dialog {
  width: 750rpx;
  height: 884rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.dialog .header {
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
}

.dialog .header text {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.form-item {
  display: flex;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #f9f9f9;
  padding: 0 30rpx;
  justify-content: space-between;
  text-align: right;
}

.form-item .title {
  width: 164rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: left;
}

.placeholder-color {
  color: #999 !important;
}

.form-textarea {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  padding: 26rpx 30rpx;
  text-align: left;
}

.form-textarea-text{
  margin-left: 20rpx;
}

.title-value {
  text-align: right;
}

.dialog .header .cancel-icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 26rpx;
  top: -70rpx;
}

.dialog .btn {
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(250, 190, 0, 1);
  position: absolute;
  bottom: 32rpx;
  z-index: 999;
  border-radius: 8rpx;
  left: 24rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.dialog .btn::after {
  display: none;
}

.dialog .btn::before {
  display: none;
}

.suspensionButton {
  width: 100%;
  position: fixed;
  bottom: 0;
}

.shareButton {
  width: 702rpx;
  height: 88rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(137deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  border-radius: 8rpx;
}

.goodsDesc {
  margin-bottom: 152rpx;
}

.title-value-left {
  text-align: left;
}
