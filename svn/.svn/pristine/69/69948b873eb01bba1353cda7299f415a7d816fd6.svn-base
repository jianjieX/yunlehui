/* pages/payPassword/payPassword.wxss */

.password-view {
  background-color: white;
  padding: 0 24rpx;
  margin-top: 24rpx;
}

.input-back-view {
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  position: relative;
  display: flex;
}

.show-hidden-psd {
  width: 30rpx;
  height: 20rpx;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto 0;
  display: block;
}

.input-type {
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.input-style {
  height: 100rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-left: 24rpx;
}

.line-view {
  width: 702rpx;
  height: 1px;
  background: rgba(238, 238, 238, 1);
}

.bottom-button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: rgba(250, 190, 0, 1);
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  position: fixed;
  bottom: 0;
}

.phone-code-view {
  margin-top: 240rpx;
}

.input {
  width: 702rpx;
  display: flex;
  height: 88rpx;
  align-items: center;
  border: 1px solid #c5c5c5;
  border-radius: 44rpx;
  margin: 0 auto;
}

.input-color1 {
  background-color: #fff;
}

.input input {
  height: 100%;
  flex: 1;
  font-size: 28rpx;
  padding-left: 32rpx;
  position: relative;
}

.message {
  border: none;
  margin: 32rpx auto 0 auto;
}

.message input {
  width: 448rpx;
  height: 88rpx;
  border: 1px solid #c5c5c5;
  border-radius: 44rpx;
  position: relative;
  background-color: #fff;
}

.input .title {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 34rpx;
  border-right: 1px solid #c5c5c5;
}

.input .all {
  color: #fff;
  font-size: 28rpx;
}

.all {
  width: 220rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(136deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
  margin-left: 32rpx;
}

.sec {
  width: 220rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff5850;
  background: linear-gradient(136deg, rgba(253, 224, 0, 1) 0%, rgba(250, 190, 0, 1) 100%);
}
